<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.todo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".TodoApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.list.event.AddEventActivity">
        </activity>
        <activity android:name=".ui.list.event.EventDetailActivity">
        </activity>
        <activity android:name=".learn.LearnActivity">
        </activity>
        <activity android:name=".ui.list.EventListActivity">
        </activity>
        <activity android:name=".ui.register.RegisterActivity">
        </activity>
        <activity android:name=".ui.login.LoginActivity" android:launchMode="singleTask">
        </activity>
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>