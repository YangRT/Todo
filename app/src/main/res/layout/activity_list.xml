<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.list.EventListActivity">
    <LinearLayout
            android:elevation="10dp"
            android:orientation="vertical"
            android:id="@+id/unfinished"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toStartOf="@id/finished"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp" android:layout_height="60dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintHorizontal_chainStyle="spread" android:focusable="true">
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/unfinished_image"
                android:src="@drawable/unfinished"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="23dp"
                />
        <TextView
                android:id="@+id/unfinished_text"
                android:gravity="center"
                android:text="@string/unfinished"
                android:layout_width="match_parent"
                android:layout_height="16dp"/>
    </LinearLayout>
    <LinearLayout
            android:elevation="10dp"
            android:orientation="vertical"
            android:id="@+id/finished"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintStart_toEndOf="@id/unfinished"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:layout_width="0dp" android:layout_height="60dp" android:focusable="true">
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/finished_image"
            android:src="@drawable/finished"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            />
    <TextView
            android:id="@+id/finished_text"
            android:gravity="center"
            android:text="@string/finished"
            android:layout_width="match_parent"
            android:layout_height="16dp"/>
    </LinearLayout>
    <FrameLayout
            android:id="@+id/fragment_layout"
            app:layout_constraintBottom_toTopOf="@id/finished"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>