<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.list.event.EventDetailActivity">
    <LinearLayout
            android:id="@+id/event_detail_actionbar"
            android:background="@color/colorLearn"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/event_detail_back"
                android:scaleType="center"
                android:src="@drawable/back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"/>
        <TextView
                android:text="详情"
                android:textSize="22sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="50dp"/>
        <TextView
                android:id="@+id/event_detail_edit"
                android:text="@string/edit"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="50dp"/>
    </LinearLayout>
    <include layout="@layout/event_detail" android:id="@+id/detail"
    />
</LinearLayout>